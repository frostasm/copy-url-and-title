{
	"name": "Copy URL + Title",
	"version": "2.0",
	"manifest_version": 2,
	"description": "Lets you copy URL, Title, Title + URL of All Open Tabs or Current tabs in Text or HTML format using the right click menu.",
	"icons": { 
		"16": "img/icon16.png",				
		"32": "img/icon32.png",		
		"48": "img/icon48.png",		
		"128": "img/icon128.png"	
	},
	"background": {
    	"page": "background.html"
    },
	"permissions": [ 
		"contextMenus",
		"unlimitedStorage",
		"tabs",
		"http://*/*",
		"https://*/*",
		"clipboardRead",
		"clipboardWrite"		
	],
	"homepage_url": "http://code.google.com/p/copy-url-and-title/"
}